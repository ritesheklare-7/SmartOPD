<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/smartopd_logo"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Smart OPD"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Healthcare made simple"
            android:textColor="#8A8A8A"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Full Name -->
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/etName"
            android:hint="John Doe"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:layout_marginBottom="14dp"/>

        <!-- Email -->
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/etEmail"
            android:hint="john@example.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:layout_marginBottom="14dp"/>

        <!-- Phone -->
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/etPhone"
            android:hint="+1234 567 890"
            android:inputType="phone"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:layout_marginBottom="14dp"/>

        <!-- Password -->
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/etPassword"
            android:hint="Min. 8 characters"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:padding="14dp"
            android:layout_marginBottom="18dp"/>

        <!-- Register As -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="I am registering as a..."
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/toggleLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/btnPatient"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Patient"
                android:background="@drawable/bg_toggle_selected"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnDoctor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Doctor"/>
        </LinearLayout>

        <!-- Register Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/bg_register_btn"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvLogin"
            android:text="Already have an account? Log in"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</ScrollView>
