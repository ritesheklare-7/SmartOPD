<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <!-- HEADER CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#163C7D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:text="Smart OPD"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:text="Healthcare made simple"
                android:textColor="#DDE6F5"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchDoctors"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/search_bg"
                android:queryHint="Search for doctors, clinics, or specialties"
                app:iconifiedByDefault="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CATEGORY CHIPS -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:text="All"
            app:checkedIconVisible="false"
            android:checked="true" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <com.google.android.material.chip.Chip
            android:text="Cardiology"
            app:checkedIconVisible="false"android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <com.google.android.material.chip.Chip
            android:text="Pediatrics"
            app:checkedIconVisible="false"android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- TITLE -->
    <TextView
        android:id="@+id/txtAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Doctors"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroup"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- DOCTOR LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDoctors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtAvailable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
