<?xml version="1.0" encoding="utf-8"?>
<!--
    item_patient.xml
    Single row in the "Waiting Patients" RecyclerView on DashboardFragment
    Colors match SmartOPD theme: Blue #1976D2 | Green #5CB85C
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Token Number Circle -->
        <TextView
            android:id="@+id/tvTokenCircle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="01"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Patient Name -->
        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rajesh Kumar"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvTokenCircle"
            app:layout_constraintEnd_toStartOf="@id/tvStatusBadge"/>

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/_9876543210"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_marginStart="14dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvPatientName"
            app:layout_constraintStart_toEndOf="@id/tvTokenCircle"
            app:layout_constraintEnd_toStartOf="@id/tvStatusBadge"/>

        <!-- Time Slot -->
        <TextView
            android:id="@+id/tvTimeSlot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ• Morning Slot"
            android:textSize="11sp"
            android:textColor="@color/primary_blue"
            android:layout_marginStart="14dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvPhone"
            app:layout_constraintStart_toEndOf="@id/tvTokenCircle"
            app:layout_constraintEnd_toStartOf="@id/tvStatusBadge"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/badge_waiting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
