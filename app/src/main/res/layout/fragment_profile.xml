<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Top Bar -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_dark" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/txtTitle"
        android:text="My Profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_settings"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/primary_blue" />

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/surface_white"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_bg"
                android:padding="6dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtName"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtPatientId"
                android:text="Patient ID â€¢ SPD-99281"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Personal Details -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPersonal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="3dp"
        android:backgroundTint="@color/card_bg"
        app:layout_constraintTop_toBottomOf="@id/cardProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PERSONAL DETAILS"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_gray"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtFullName"
                android:text="Full Name: Johnathan Doe"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtAge"
                android:text="Age: 28 Years"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtBlood"
                android:text="Blood Group: O+"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Settings Options -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="3dp"
        android:backgroundTint="@color/surface_white"
        app:layout_constraintTop_toBottomOf="@id/cardPersonal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/optEditProfile"
                android:text="âœï¸ Edit Profile"
                style="@style/ProfileOption"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/optTokenHistory"
                android:text="ðŸ“œ Token History"
                style="@style/ProfileOption"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/optSupport"
                android:text="ðŸ“ž Help and Support"
                style="@style/ProfileOption"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/optLogout"
                android:text="ðŸšª Logout"
                android:textColor="@color/red"
                style="@style/ProfileOption"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
